// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./sqlite.db"
}

model User {
  id               String          @id @unique @default(uuid())
  UserPermissions  UserPermissions @relation(fields: [idUserPermission], references: [id])
  idUserPermission Int
  Name             String
  Birthday         String
  Cpf_cnpj         String          @unique
  Phone            String          @unique
  Email            String          @unique
  Password         String
  Services         Service[]
}

model UserPermissions {
  id          Int    @unique
  Description String
  Users       User[]
}

model Client {
  id           String         @id @unique @default(uuid())
  Phone        String         @unique
  Email        String         @unique
  Name         String
  Birthday     String
  Password     String
  Appointments Appointments[]
}

model Service {
  id           String         @id @unique @default(uuid())
  User         User           @relation(fields: [idUser], references: [id])
  idUser       String
  Description  String
  DurationTime String
  Price        Float
  Appointments Appointments[]
}

model Appointments {
  id        String  @id @unique @default(uuid())
  idClient  String
  idService String
  Year      Int
  Day       Int
  Month     Int
  Hour      String
  Status    Int
  Startime  String
  EndTime   String
  Service   Service @relation(fields: [idService], references: [id])
  Client    Client  @relation(fields: [idClient], references: [id])
}
